# Procure-Pro-ISO Configuration

# Application
APP_NAME=Procure-Pro-ISO
APP_VERSION=1.0.0
DEBUG=true
API_V1_PREFIX=/api/v1

# Database (PostgreSQL)
# For Railway PostgreSQL, use: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/procure_pro
DATABASE_ECHO=false

# Security
SECRET_KEY=change-this-to-a-secure-secret-key-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Email Settings (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM_EMAIL=noreply@procure-pro-iso.com
SMTP_FROM_NAME=Procure-Pro-ISO
SMTP_TLS=true

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
